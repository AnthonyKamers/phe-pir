{% if session['step'] >= 1 %}
    <form action="/retrieve" method="POST" class="relative">
        <div class="step">
            Step: 2-3
        </div>

        <div class="center">
            <input type="submit" name="retrieve" value="Retrieve">
            <br>
            <small>
                Only the encrypted vector will be sent to the server
            </small>

            {% if session['step'] >= 2 %}
                <div class="flex justify-center flex-margin-right margin-top">
                    <div class="flex flex-margin-right">
                        <div class="flex-column">
                            <b>Encrypted sum</b>
                            <div class="rectangle">
                                {{ show_encrypted_value(session['encrypted_sum']) }}
                            </div>
                        </div>
                        <div class="flex-column">
                            <b>Compute sums of ciphertext time</b>
                            <span>{{ session['time_sum_encrypted'] }}s</span>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </form>
    <hr>
{% endif %}
